#!/bin/rc

{
        if(test -r /mnt/acme/acme/body)
                cat /mnt/acme/acme/body
        if not
                cat /dev/text
} | grep '^[^         ]*%[         ]*'$1  |
        {echo; cat} | pr -t -n | sort -u +1 | sort -n |
        sed 's/^ *[0-9]+        //' | grep .

# the silly {echo; cat} gets around pr printing "empty file" when
# presented with no input.
