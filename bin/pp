#!/bin/bash

if test -r /tmp/pid
then
	kill `cat /tmp/pid` 2>/dev/null
fi

if test -r /tmp/pp
then
	kill `cat /tmp/pp` 2>/dev/null
fi

if test "$1" = -k
then
	exit
fi

rm -rf /tmp/in /tmp/out /tmp/pid /tmp/log /tmp/pp
empty -f -i /tmp/in -o /tmp/out -p /tmp/pid -L /tmp/log python2

echo $$ > /tmp/pp

while test -p /tmp/out
do empty -r -i /tmp/out
done
