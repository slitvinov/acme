#!/bin/bash

i=oc

if test -r /tmp/$i.pid
then
	kill `cat /tmp/$i.pid`
fi

if test -r /tmp/$i.pp
then
	kill `cat /tmp/$i.pp`
fi

if test "$1" = -k
then
	exit
fi

rm -rf /tmp/$i.in /tmp/$i.out /tmp/$i.pid /tmp/$i.log /tmp/$i.pp
empty -f -i /tmp/$i.in -o /tmp/$i.out -p /tmp/$i.pid -L /tmp/$i.log octave -qf

echo $$ > /tmp/$i.pp

while :
do empty -r -i /tmp/$i.out
done
